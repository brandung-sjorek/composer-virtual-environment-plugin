{
	"name" : "sjorek/composer-virtual-environment-plugin",
	"description" : "A composer-plugin adding a command to activate/deactivate the current bin directory in shell, optionally placing a symlink to the composer- and php-binary.",
	"homepage" : "https://sjorek.github.io/composer-virtual-environment-plugin/",
	"license" : "BSD-3-Clause",
	"authors" : [
		{
			"name" : "Stephan Jorek",
			"email" : "stephan.jorek@gmail.com"
		}
	],
	"type" : "composer-plugin",
	"keywords" : [
		"environment",
		"shell",
		"php",
		"composer"
	],
	"autoload" : {
		"psr-4" : {
			"Sjorek\\Composer\\VirtualEnvironment\\" : "src/Composer/VirtualEnvironment",
			"Sjorek\\Composer\\VirtualEnvironment\\Tests\\" : "tests/Composer/VirtualEnvironment/Tests"
		}
	},
	"require" : {
		"php" : "^7.0",
		"composer-plugin-api" : "^1.1"
	},
	"require-dev" : {
		"friendsofphp/php-cs-fixer" : "^2.7",
		"phpunit/phpunit" : "^6.4",
		"mikey179/vfsStream" : "^1.6"
	},
	"extra" : {
		"class" : "Sjorek\\Composer\\VirtualEnvironment\\Plugin"
	},
	"scripts": {
		"build": "php-cs-fixer fix",
		"test": "phpunit -v",
		"test-quick": "phpunit -v --exclude-group",
		"test-large": "phpunit -v --group=large"
	}
}
